var temas = [
    {id: "otro", value: "Otro"},
    {id: "humanidades", value: "Humanidades"},
    {id: "ocio", value: "Ocio"},
    {id: "ciencia", value: "Ciencia"},
    {id: "tecnologia", value: "TecnologoÃ­a"}
];
%>

<select id="tema" name="quiz[tema]">
    <option value="" selected> -- Seleccione un tema -- </option>

    <% for (var i in temas) { %>
        <option value="<%= temas[i].id %>" <%= temas[i].id == quiz.tema ? "selected" : "" %>>
            <%= temas[i].value %>
        </option>
    <% } %>

</select>
